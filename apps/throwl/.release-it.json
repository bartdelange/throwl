{
  "$schema": "https://unpkg.com/release-it@19/schema/release-it.json",
  "npm": {
    "publish": false
  },
  "git": {
    "commitMessage": "chore(release): v${version}",
    "tagName": "v${version}"
  },
  "github": {
    "release": true
  },
  "hooks": {
    "after:bump": "nx run throwl:syncNativeVersions --version=${version}"
  }
}
